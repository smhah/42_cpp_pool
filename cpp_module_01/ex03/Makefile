SRCS		= HumanA.cpp HumanB.cpp main.cpp Weapon.cpp

FLAGS		= -Wall -Wextra -Wno-unused -Werror

NAME		= weapon

all: 		$(NAME)

$(NAME):
			clang++ $(FLAGS) $(SRCS) -o $(NAME)

clean:		
			rm -rf $(NAME)

fclean:
			rm -rf $(NAME)

re:			fclean all
